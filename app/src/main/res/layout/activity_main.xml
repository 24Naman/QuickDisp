<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/main_layout"
        layout="@layout/quick_display_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe4b5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_layout_switches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#a8ff00ea"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView_switches"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/alex_brush"
                        android:gravity="center_horizontal"
                        android:text="@string/preferences"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="@color/ic_launcher_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/switch_showUsername"
                                    style="@style/AppTheme.SwitchStyle"
                                    android:layout_width="match_parent"
                                    android:text="@string/show_username" />

                                <TextView
                                    android:id="@+id/textView_showUsernameInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableStart="@android:drawable/ic_menu_info_details"
                                    android:drawableTint="#0000FF"
                                    android:drawableTintMode="src_atop"
                                    android:text="@string/show_username_from_contacts"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textStyle="bold|italic" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:padding="20dp"
                            app:cardBackgroundColor="@color/ic_launcher_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/switch_showDeviceName"
                                    style="@style/AppTheme.SwitchStyle"
                                    android:text="@string/show_device_name" />

                                <TextView
                                    android:id="@+id/textView_showDeviceInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableStart="@android:drawable/ic_menu_info_details"
                                    android:drawableTint="#0000FF"
                                    android:drawableTintMode="src_atop"
                                    android:text="@string/show_name_from_device_info"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textStyle="bold|italic" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:padding="20dp"
                            app:cardBackgroundColor="@color/ic_launcher_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/switch_autoClose"
                                    style="@style/AppTheme.SwitchStyle"
                                    android:layout_width="match_parent"
                                    android:text="@string/auto_close_dialog" />

                                <TextView
                                    android:id="@+id/textView_autoCloseInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableStart="@android:drawable/ic_menu_info_details"
                                    android:drawableTint="#0000FF"
                                    android:text="@string/close_dialog_on_any_option"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textStyle="bold|italic" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_layout_startColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#a8ff00ea"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView_startColor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/alex_brush"
                        android:gravity="center_horizontal"
                        android:text="@string/start_color"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/ic_launcher_background"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:cardBackgroundColor="#000000"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="40dp"
                                app:contentPadding="2dp">

                                <ImageView
                                    android:id="@+id/imageView_startColor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:background="#ffffff"
                                    android:contentDescription="@string/show_sample_color"
                                    android:elevation="20dp"
                                    android:fadingEdge="horizontal|vertical" />

                            </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView_startColorHex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/white_color_hex"
                                    android:textColor="@color/metallicRed" />

                                <Button
                                    android:id="@+id/button_changeStartColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorAccent"
                                    android:elevation="25dp"
                                    android:text="@string/change" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_layout_endColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#a8ff00ea"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView_endColor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/alex_brush"
                        android:gravity="center_horizontal"
                        android:text="@string/end_color"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/ic_launcher_background"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:cardBackgroundColor="#000000"
                                app:cardCornerRadius="5dp"
                                app:contentPadding="2dp">

                                <ImageView
                                    android:id="@+id/imageView_endColor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:background="#ffffff"
                                    android:contentDescription="@string/show_sample_color"
                                    android:elevation="20dp"
                                    android:fadingEdge="horizontal|vertical" />

                            </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView_endColorHex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/white_color_hex"
                                    android:textColor="@color/metallicRed" />

                                <Button
                                    android:id="@+id/button_changeEndColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorAccent"
                                    android:elevation="25dp"
                                    android:text="@string/change" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_layout_bgColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#a8ff00ea"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView_bgColor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/alex_brush"
                        android:gravity="center_horizontal"
                        android:text="@string/dialog_bgColor_picker"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/ic_launcher_background"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:cardBackgroundColor="#000000"
                                app:cardCornerRadius="5dp"
                                app:contentPadding="2dp">

                                <ImageView
                                    android:id="@+id/imageView_bgColor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:background="#ffffff"
                                    android:contentDescription="@string/show_sample_color"
                                    android:elevation="20dp"
                                    android:fadingEdge="horizontal|vertical" />

                            </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView_bgColorHex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/white_color_hex"
                                    android:textColor="@color/metallicRed" />

                                <Button
                                    android:id="@+id/button_changeBgColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorAccent"
                                    android:elevation="25dp"
                                    android:text="@string/change" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
