<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_dialogIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.4"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:id="@+id/imageView_currentSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/icon_for_current_settings"
            android:src="@drawable/default_icon" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_dialogButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.2"
        android:padding="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton_fifteenSeconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/fifteen_seconds"
                    app:srcCompat="@drawable/auto_fifteen_seconds" />

                <ImageButton
                    android:id="@+id/imageButton_thirtySeconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/thirty_seconds"
                    app:srcCompat="@drawable/auto_thirty_seconds" />

                <ImageButton
                    android:id="@+id/imageButton_oneMinute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/one_minute"
                    app:srcCompat="@drawable/auto_one_minute" />

                <ImageButton
                    android:id="@+id/imageButton_twoMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/two_minutes"
                    app:srcCompat="@drawable/auto_two_minutes" />

                <ImageButton
                    android:id="@+id/imageButton_fiveMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/five_minutes"
                    app:srcCompat="@drawable/auto_five_minutes" />

                <ImageButton
                    android:id="@+id/imageButton_tenMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/ten_minutes"
                    app:srcCompat="@drawable/auto_ten_minutes" />

                <ImageButton
                    android:id="@+id/imageButton_thirtyMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/thirty_minutes"
                    app:srcCompat="@drawable/auto_thirty_minutes" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switch_autoBright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:checked="false"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="8dp"
                    android:text="@string/auto_brightness"
                    android:thumbTint="#00FFFF"
                    android:trackTint="#0000FF"
                    tools:checked="false" />

                <ImageButton
                    android:id="@+id/imageButton_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_toEndOf="@id/switch_autoBright"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/cancel"
                    android:src="@drawable/ic_cancel" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>